@model HotelZaPse.Models.BO.AdminBo

@{
    ViewBag.Title = Model.Ime + " " + Model.Prezime + " | Admin";
}

<div class="page-header">
    <h2><i class="fas fa-user-cog fa-4x"></i>&nbsp;&nbsp;&nbsp;&nbsp;Admin</h2>
</div>

<div class="form-horizontal margtop20 col-md-offset-1">
    <div class="form-group">
        <label class="control-label col-md-2">Id</label>

        <div class="col-md-8">
            <p class="form-control-static">
                @Html.DisplayFor(model => model.Id)
            </p>
        </div>
    </div>
    <div class="form-group">

        @if (HttpContext.Current.Request.Cookies["LangCookie"].Value == "lang=RS")
        {
            @Html.LabelFor(model => model.Ime, htmlAttributes: new { @class = "control-label col-md-2" })
        }
        else
        {
            <label class="control-label col-md-2">First name</label>
        }
        <div class="col-md-8">
            <p class="form-control-static">
                @Html.DisplayFor(model => model.Ime)
            </p>
        </div>
    </div>

    <div class="form-group">

        @if (HttpContext.Current.Request.Cookies["LangCookie"].Value == "lang=RS")
        {
            @Html.LabelFor(model => model.Prezime, htmlAttributes: new { @class = "control-label col-md-2" })
        }
        else
        {
            <label class="control-label col-md-2">Last name</label>
        }
        <div class="col-md-8">
            <p class="form-control-static">
                @Html.DisplayFor(model => model.Prezime)
            </p>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Mail, htmlAttributes: new { @class = "control-label col-md-2" })

        <div class="col-md-8">
            <p class="form-control-static">
                @Html.DisplayFor(model => model.Mail)
            </p>
        </div>
    </div>


</div>
