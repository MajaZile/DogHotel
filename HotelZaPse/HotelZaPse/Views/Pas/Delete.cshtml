@model HotelZaPse.Models.BO.PasBo

@{
    if (HttpContext.Current.Request.Cookies["LangCookie"].Value == "lang=RS")
    {
        ViewBag.Title = Model.Ime + " | Brisanje psa";
    }
    else
    {
        ViewBag.Title = Model.Ime + " | Delete dog";
    }
}

<div class="page-header">
    <h2><i class="fas fa-paw fa-4x"></i>&nbsp;&nbsp;&nbsp;&nbsp;@Model.Ime</h2>
</div>

<div class="row margtop20">
    <div class="col-md-6">


        <div class="form-horizontal">
            <div class="form-group">
                @if (HttpContext.Current.Request.Cookies["LangCookie"].Value == "lang=RS")
                {
                    <label for="vlasnik" class="control-label col-md-2">
                        Vlasnik
                    </label>
                }
                else
                {
                    <label for="vlasnik" class="control-label col-md-2">
                        Owner
                    </label>
                }

                <div class="col-md-8">
                    <p class="form-control-static">
                        @if (User.IsInRole("admin"))
                        {
                            <a class="iconinheritwheat" href="@Url.Action("ViewProfileByAdmin", "Vlasnik", new { id = Model.Vlasnik.Id })">
                                @Model.Vlasnik.Ime @Model.Vlasnik.Prezime
                            </a>
                        }
                        else
                        {
                            <a href="@Url.Action("ViewProfile", "Vlasnik", new { id = Model.Vlasnik.Id })">
                                @Model.Vlasnik.Ime @Model.Vlasnik.Prezime
                            </a>
                        }
                    </p>
                </div>
            </div>
            <div class="form-group">
                @if (HttpContext.Current.Request.Cookies["LangCookie"].Value == "lang=RS")
                {
                    @Html.LabelFor(model => model.Ime, htmlAttributes: new { @class = "control-label col-md-2" })
                }
                else
                {
                    <label class="control-label col-md-2">Name</label>
                }

                <div class="col-md-8">
                    <p class="form-control-static">
                        @Html.DisplayFor(model => model.Ime)
                    </p>
                </div>
            </div>

            <div class="form-group">
                @if (HttpContext.Current.Request.Cookies["LangCookie"].Value == "lang=RS")
                {
                    @Html.LabelFor(model => model.Rasa, htmlAttributes: new { @class = "control-label col-md-2" })
                }
                else
                {
                    <label class="control-label col-md-2">Breed</label>
                }

                <div class="col-md-8">
                    <p class="form-control-static">
                        @Html.DisplayFor(model => model.Rasa)
                    </p>
                </div>
            </div>

            <div class="form-group">
                @if (HttpContext.Current.Request.Cookies["LangCookie"].Value == "lang=RS")
                {
                    @Html.LabelFor(model => model.Pol, htmlAttributes: new { @class = "control-label col-md-2" })
                }
                else
                {
                    <label class="control-label col-md-2">Gender</label>
                }

                <div class="col-md-8">

                    @if (Model.Pol == true)
                    {
                        if (HttpContext.Current.Request.Cookies["LangCookie"].Value == "lang=RS")
                        {
                            <p class="form-control-static">
                                Ženka
                            </p>
                        }
                        else
                        {
                            <p class="form-control-static">
                                Female
                            </p>
                        }

                    }
                    else
                    {
                        if (HttpContext.Current.Request.Cookies["LangCookie"].Value == "lang=RS")
                        {
                            <p class="form-control-static">
                                Mužjak
                            </p>
                        }
                        else
                        {
                            <p class="form-control-static">
                                Male
                            </p>
                        }

                    }

                </div>
            </div>

            <div class="form-group">
                @if (HttpContext.Current.Request.Cookies["LangCookie"].Value == "lang=RS")
                {
                    @Html.LabelFor(model => model.Opis, htmlAttributes: new { @class = "control-label col-md-2" })
                }
                else
                {
                    <label class="control-label col-md-2">Description</label>
                }
                <div class="col-md-8">
                    <p class="form-control-static">
                        @Html.DisplayFor(model => model.Opis)
                    </p>
                </div>
            </div>
            <div class="form-group">
                @if (HttpContext.Current.Request.Cookies["LangCookie"].Value == "lang=RS")
                {
                    <label class="control-label col-md-2">Sterilisan</label>
                }
                else
                {
                    <label class="control-label col-md-2">Neutered</label>
                }
                <div class="col-md-8">

                    @if (Model.Sterilisan == true)
                    {

                        if (HttpContext.Current.Request.Cookies["LangCookie"].Value == "lang=RS")
                        {
                            <p class="form-control-static">
                                Da
                            </p>
                        }
                        else
                        {
                            <p class="form-control-static">
                                Yes
                            </p>
                        }
                    }
                    else
                    {

                        if (HttpContext.Current.Request.Cookies["LangCookie"].Value == "lang=RS")
                        {
                            <p class="form-control-static">
                                Ne
                            </p>
                        }
                        else
                        {
                            <p class="form-control-static">
                                No
                            </p>
                        }
                    }

                </div>
            </div>
            @if (User.IsInRole("admin"))
            {
                <div class="form-group">

                    @if (HttpContext.Current.Request.Cookies["LangCookie"].Value == "lang=RS")
                    {
                        @Html.LabelFor(model => model.Obrisan, htmlAttributes: new { @class = "control-label col-md-2" })
                    }
                    else
                    {
                        <label class="control-label col-md-2">Deleted</label>
                    }
                    <div class="col-md-8">

                        @if (Model.Obrisan == true)
                        {
                            if (HttpContext.Current.Request.Cookies["LangCookie"].Value == "lang=RS")
                            {
                                <p class="form-control-static">
                                    Da
                                </p>
                            }
                            else
                            {
                                <p class="form-control-static">
                                    Yes
                                </p>
                            }
                        }
                        else
                        {
                            if (HttpContext.Current.Request.Cookies["LangCookie"].Value == "lang=RS")
                            {
                                <p class="form-control-static">
                                    Ne
                                </p>
                            }
                            else
                            {
                                <p class="form-control-static">
                                    No
                                </p>
                            }
                        }

                    </div>
                </div>
            }







        </div>

















    </div>
    <div class="col-md-6">

        <div class="page-header red-text">

            @if (HttpContext.Current.Request.Cookies["LangCookie"].Value == "lang=RS")
            {
                <h3><i class="fas fa-trash-alt fa-2x"></i>&nbsp;&nbsp;Da li ste sigurni da želite obrisati psa?</h3>
            }
            else
            {
                <h3><i class="fas fa-trash-alt fa-2x"></i>&nbsp;&nbsp;Are you sure you want to delete this dog?</h3>
            }
        </div>
        @using (Html.BeginForm())
        {
            <input type="hidden" name="urlReferrer" value="@ViewBag.UrlReferrer" />

            @*podaci o psu*@
            @Html.HiddenFor(model => model.Vlasnik.Id)
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.Ime)
            @Html.HiddenFor(model => model.Rasa)
            @Html.HiddenFor(model => model.Pol)
            @Html.HiddenFor(model => model.Sterilisan)
            @Html.HiddenFor(model => model.Opis)
            @Html.HiddenFor(model => model.Obrisan)

            @Html.AntiForgeryToken()

            if (ViewBag.FutureReservations > 0)
            {
                if (HttpContext.Current.Request.Cookies["LangCookie"].Value == "lang=RS")
                {
                    <h4>Upozorenje!</h4>

                    //PADEZI

                    if (ViewBag.FutureReservations % 10 == 1)
                    {
                        <h5>Brisanjem psa @Model.Ime biće automatski otkazana @ViewBag.FutureReservations buduća rezervacija za tog psa.</h5>
                    }
                    if (ViewBag.FutureReservations % 10 == 2 || ViewBag.FutureReservations % 10 == 3 || ViewBag.FutureReservations % 10 == 4)
                    {
                        <h5>Brisanjem psa @Model.Ime biće automatski otkazane @ViewBag.FutureReservations buduće rezervacije za tog psa.</h5>
                    }
                    if (ViewBag.FutureReservations % 10 > 4)
                    {
                        <h5>Brisanjem psa @Model.Ime biće automatski otkazano @ViewBag.FutureReservations budućih rezervacija za tog psa.</h5>
                    }
                }
                else
                {
                    <h4>Warning!</h4>
                    <h5>Deleting a dog @Model.Ime will automatically cancel a future @ViewBag.FutureReservations reservation for that dog.</h5>
                }

            }


            @Html.AntiForgeryToken()

            <div class="form-group">
                <div class="col-md-offset-1 col-md-8">
                    @if (HttpContext.Current.Request.Cookies["LangCookie"].Value == "lang=RS")
                    {
                        <a class="btn btn-custom" href="javascript:history.back()">Odustani</a>
                        <input type="submit" value="Obriši" class="btn btn-custom" />
                    }
                    else
                    {
                        <a class="btn btn-custom" href="javascript:history.back()">Cancel</a>
                        <input type="submit" value="Delete" class="btn btn-custom" />
                    }
                </div>
            </div>
        }


    </div>
</div>