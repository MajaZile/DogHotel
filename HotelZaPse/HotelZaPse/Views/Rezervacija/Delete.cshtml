@model HotelZaPse.Models.BO.RezervacijaBo

@{
    if (HttpContext.Current.Request.Cookies["LangCookie"].Value == "lang=RS")
    {
        ViewBag.Title = "Brisanje rezervacije";
    }
    else
    {
        ViewBag.Title = "Cancel booking";
    }

}


<div class="page-header">
    @if (HttpContext.Current.Request.Cookies["LangCookie"].Value == "lang=RS")
    {
        <h2><i class="far fa-calendar-alt"></i>&nbsp;&nbsp;&nbsp;&nbsp;Rezervacija</h2>
    }
    else
    {
        <h2><i class="far fa-calendar-alt"></i>&nbsp;&nbsp;&nbsp;&nbsp;Booking</h2>
    }

</div>

<div class="row margtop20">
    <div class="col-md-6">
        <div class="admin-usluga lrpadding">
            <h4>
                @if (HttpContext.Current.Request.Cookies["LangCookie"].Value == "lang=RS")
                {
                    <span class="feature">
                        Pas:
                    </span>
                }
                else
                {
                    <span class="feature">
                        Dog:
                    </span>
                }
                <span class="value">@Html.DisplayFor(model => model.Pas.Ime)</span>
            </h4>

            <h4>
                @if (HttpContext.Current.Request.Cookies["LangCookie"].Value == "lang=RS")
                {
                    <span class="feature">
                        Usluga:
                    </span>
                }
                else
                {
                    <span class="feature">
                        Service:
                    </span>
                }
                <span class="value">@Html.DisplayFor(model => model.Usluga.Naziv)</span>
            </h4>
            <div class="opis">
                <p>
                    @Html.DisplayFor(model => model.Usluga.Opis)
                </p>
            </div>

            <h4>
                @if (HttpContext.Current.Request.Cookies["LangCookie"].Value == "lang=RS")
                {
                    <span class="feature">
                        Prijava:
                    </span>
                }
                else
                {
                    <span class="feature">
                        Check-in:
                    </span>
                }
                <span class="value">@Html.DisplayFor(model => model.Prijava)</span>
            </h4>

            <h4>
                @if (HttpContext.Current.Request.Cookies["LangCookie"].Value == "lang=RS")
                {
                    <span class="feature">
                        Odjava:
                    </span>
                }
                else
                {
                    <span class="feature">
                        Check-out:
                    </span>
                }
                <span class="value">@Html.DisplayFor(model => model.Odjava)</span>
            </h4>

            <h4>
                @if (HttpContext.Current.Request.Cookies["LangCookie"].Value == "lang=RS")
                {
                    <span class="feature">
                        Napomena:
                    </span>
                }
                else
                {
                    <span class="feature">
                        Note:
                    </span>
                }
                <span class="value">@Html.DisplayFor(model => model.Napomena)</span>
            </h4>
            <h4>
                @if (HttpContext.Current.Request.Cookies["LangCookie"].Value == "lang=RS")
                {
                    <span class="feature">
                        Cena:
                    </span>
                }
                else
                {
                    <span class="feature">
                        Price:
                    </span>
                }

            </h4>
        </div>

        <div class="price1 margbot20">
            <h3>
                @Model.Cena
                @if (HttpContext.Current.Request.Cookies["LangCookie"].Value == "lang=RS")
                {
                    <span> dinara</span>
                }
                else
                {
                    <span> din</span>
                }
            </h3>
        </div>


    </div>
    <div class="col-md-6">


        <div class="page-header red-text">
            @if (HttpContext.Current.Request.Cookies["LangCookie"].Value == "lang=RS")
            {
                <h3><i class="fas fa-trash-alt fa-2x"></i>&nbsp;&nbsp;Da li ste sigurni da želite da otkažete rezervaciju?</h3>
            }
            else
            {
                <h3><i class="fas fa-trash-alt fa-2x"></i>&nbsp;&nbsp;Are you sure you want to cancel your reservation?</h3>
            }

        </div>
        @using (Html.BeginForm())
        {
            @*podaci o rezervaciji*@
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.Prijava)
            @Html.HiddenFor(model => model.Odjava)
            @Html.HiddenFor(model => model.Napomena)
            @Html.HiddenFor(model => model.Cena)
            @Html.HiddenFor(model => model.Usluga.Id)
            @Html.HiddenFor(model => model.Pas.Id)
            @Html.HiddenFor(model => model.Pas.Vlasnik.Id)

            @Html.AntiForgeryToken()


            <div class="form-group">
                <div class="col-md-offset-1 col-md-8">
                    @if (HttpContext.Current.Request.Cookies["LangCookie"].Value == "lang=RS")
                    {
                        <a class="btn btn-custom" href="javascript:history.back()">Odustani</a>
                        <input type="submit" value="Otkaži" class="btn btn-custom" />
                    }
                    else
                    {
                        <a class="btn btn-custom" href="javascript:history.back()">Cancel</a>
                        <input type="submit" value="Confirm" class="btn btn-custom" />
                    }

                </div>
            </div>
        }
    </div>
</div>